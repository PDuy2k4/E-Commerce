mixin cart-section(product_img,product_name,price)
    .product 
        .image 
            button 
                svg(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24', fill='none')
                    circle(cx='12', cy='12', r='9', fill='#DB4444')
                    path(d='M9 15L12 12M15 9L11.9994 12M11.9994 12L9 9M12 12L15 15', stroke='white', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
            img(src= product_img, alt="")
        h4.name #{product_name}  // Use #{...} for variable interpolation
    h4.price #{price} 
    input(type="number" id="quantity" name="quantity" min="1" value="1")
    h4.subtotal